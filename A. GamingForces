#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main()
{
 int t;
 cin>>t;
 while(t--)
 {
   int n,cnt=0;
   cin>>n;
   vector <int> v;
   for(int i=0;i<n;i++)
   {
   	int x;
   	cin>>x;
   	v.push_back(x);
   }
   for(int i=0;i<n;i++){
   	if(v[i]==1)
   		cnt++;
   }
   int ans=(n-cnt)+(cnt+1)/2;

   cout <<ans<<endl;
 }


}
